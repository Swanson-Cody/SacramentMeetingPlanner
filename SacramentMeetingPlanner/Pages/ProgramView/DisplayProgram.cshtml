@page
@model SacramentMeetingPlanner.Pages.ProgramView.DisplayProgramModel
@{
    ViewData["Title"] = "Display Program";
}
<head>
    <link rel="stylesheet" href="~/css/DisplayProgram.css" />
</head>
<div class="sacrament-program">
    <div class="jumbotron">
        <h1>Sacrament Program</h1>
        <h5 class="font-italic">@Model.Program.DateOfMeeting.ToShortDateString()</h5>
    </div>

    @*<p>@Html.DisplayNameFor(Model => Model.Program.PresidingLeader)</p>
        <p>@Model.Program.Participants.Where(x => x)</p>*@

    @foreach (var participant in @Model.Program.Participants) {
        <div class="row line">
            <div class="participant-role col-sm">@Html.DisplayFor(Model => participant.ParticipantRole)</div>
            <div class="participant-title col-sm">
                @Html.DisplayFor(Model => participant.ParticipantTitle)
            <span class="participant-name">@Html.DisplayFor(Model => participant.FullNameOfParticipant)</span>
        </div>
    </div>
    <div class="row subject">
        <div class="col-sm"></div>
        <div class="talk-subject col-sm">@Html.DisplayFor(Model => participant.TalkSubject)</div>
    </div>
    <br />
    <br />


}
</div>
<a asp-page="./Index">Back to Programs</a>